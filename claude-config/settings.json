{
  "env": {},
  "permissions": {
    "allow": [
      "Bash(cat:*)",
      "Bash(docker cp:*)",
      "Bash(docker exec:*)",
      "Bash(docker logs:*)",
      "Bash(docker ps:*)",
      "Bash(docker rm:*)",
      "Bash(docker stop:*)",
      "Bash(docker-compose build:*)",
      "Bash(docker-compose down:*)",
      "Bash(docker-compose ps:*)",
      "Bash(docker-compose up:*)",
      "Bash(docker-compose logs:*)",
      "Bash(find:*)",
      "Bash(gh issue view:*)",
      "Bash(git:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(lsof:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(npm run lint)",
      "Bash(npm run test:*)",
      "Bash(npm run:*)",
      "Bash(npm start)",
      "Bash(pytest:*)",
      "Bash(python -m pytest:*)",
      "Bash(python3 -m pytest:*)",
      "Bash(ruff check:*)",
      "Bash(ruff:*)",
      "Bash(touch:*)",
      "Bash(tree:*)",
      "Bash(uv run pytest:*)",
      "Bash(uv sync:*)",
      "Bash(uv pip install:*)",
      "Bash(uv add:*)",
      "Bash(uv pip list:*)",
      "Find(*)",
      "Read(*)",
      "Search(*)",
      "Web Search(*)",
      "mcp__archon",
      "mcp__context7",
      "mcp__shadcn"
    ],
    "deny": [
      "Bash(curl:*)",
      "Read(./.env)",
      "Read(./secrets/**)"
    ]
  },
  "alwaysThinkingEnabled": true,
  "statusLine": {
    "type": "command",
    "command": "bash ~/.dotfiles/claude-config/statusline-command.sh"
  },
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "osascript -e 'set volume output volume 20' ; say \"Ready\""
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "say \"Question\""
          }
        ]
      }
    ]
  }
}
