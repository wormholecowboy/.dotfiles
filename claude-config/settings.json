{
  "env": {},
  "permissions": {
    "allow": [
      "Bash(cat:*)",
      "Bash(docker cp:*)",
      "Bash(docker exec:*)",
      "Bash(docker logs:*)",
      "Bash(docker ps:*)",
      "Bash(docker rm:*)",
      "Bash(docker stop:*)",
      "Bash(docker-compose build:*)",
      "Bash(docker-compose down:*)",
      "Bash(docker-compose ps:*)",
      "Bash(docker-compose up:*)",
      "Bash(find:*)",
      "Bash(gh issue view:*)",
      "Bash(git:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(npm run lint)",
      "Bash(npm run test:*)",
      "Bash(npm run:*)",
      "Bash(npm start)",
      "Bash(pytest:*)",
      "Bash(python -m pytest:*)",
      "Bash(python3 -m pytest:*)",
      "Bash(ruff check:*)",
      "Bash(ruff:*)",
      "Bash(touch:*)",
      "Bash(tree:*)",
      "Bash(uv run pytest:*)",
      "Bash(uv sync:*)",
      "Bash(uv pip install:*)",
      "Bash(uv add:*)",
      "Bash(uv pip list:*)",
      "Find(*)",
      "Read(*)",
      "Web Search(*)",
      "mcp__archon",
      "mcp__context7",
      "mcp__shadcn"
    ],
    "deny": [
      "Bash(curl:*)",
      "Read(./.env)",
      "Read(./secrets/**)"
    ]
  },
  "alwaysThinkingEnabled": true,
  "statusLine": {
    "type": "command",
    "command": "input=$(cat); model=$(echo \"$input\" | jq -r '.model.display_name'); workspace=$(echo \"$input\" | jq -r '.workspace.current_dir'); style=$(echo \"$input\" | jq -r '.output_style.name'); printf \"\\x1b[2m%s\\x1b[0m in \\x1b[2m%s\\x1b[0m [%s]\" \"$model\" \"${workspace##*/}\" \"$style\""
  },
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "say \"ready\""
          }
        ]
      }
    ]
  }
}
