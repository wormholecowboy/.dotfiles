  // =============================================================================
  // VIM CONFIGURATION
  // =============================================================================
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.smartRelativeLine": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": false,
  "vim.easymotionMarkerooundColor": "#020202",
  "vim.surround": true,
  "vim.highlightedyank.enable": true,
  "vim.leader": "<space>",
  "vim.commandLineModeKeyBindings": [],

  // Vim Key Handling
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false,
    "<C-c>": false,
    "<C-x>": false,
    "<C-v>": false,
    "<C-z>": false,
    "<C-y>": true,
    "<C-e>": true,
    "<C-p>": false
  },

  // Vim Normal Mode Keybindings (migrated to keybindings.json)
  "vim.normalModeKeyBindings": [],

  // Vim Insert Mode Keybindings
  "vim.insertModeKeyBindings": [
    {
      // kj → Exit insert mode (alternative to Esc)
      "before": ["k", "j"],
      "after": ["<Esc>"]
    }
  ],

  // Vim Visual Mode Keybindings
  "vim.visualModeKeyBindings": [
    {
      // > → Indent selection and keep visual mode active
      "before": [">"],
      "after": [">", "g", "v"]
    },
    {
      // < → Unindent selection and keep visual mode active
      "before": ["<"],
      "after": ["<", "g", "v"]
    },
    {
      // J → Move selected lines down
      "before": ["J"],
      "commands": ["editor.action.moveLinesDownAction"]
    },
    {
      // K → Move selected lines up
      "before": ["K"],
      "commands": ["editor.action.moveLinesUpAction"]
    },
    {
      // <leader>/ → Toggle comment on selected lines
      "before": ["leader", "/"],
      "commands": ["editor.action.commentLine"]
    }
  ],

  // Vim Non-Recursive Keybindings (window movements kept, commands migrated to keybindings.json)
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      // <leader>f → EasyMotion word jump forward
      "before": ["<leader>", "f"],
      "after": ["<leader>", "<leader>", "<leader>", "b", "d", "w"]
    },
    {
      // <leader>o → Insert line below and stay in normal mode
      "before": ["<leader>", "o"],
      "after": ["o", "<Esc>", "k"]
    },
    {
      // <leader>O → Insert line above and stay in normal mode
      "before": ["<leader>", "O"],
      "after": ["o", "<Esc>", "j"]
    },
    {
      // gd → Go to definition
      "before": ["g", "d"],
      "commands": ["editor.action.goToDefinition"]
    },
    {
      // gpd → Peek definition (inline preview)
      "before": ["g", "p", "d"],
      "commands": ["editor.action.peekDefinition"]
    },
    {
      // gh → Show hover information
      "before": ["g", "h"],
      "commands": ["editor.action.showDefinitionPreviewHover"]
    },
    {
      // gi → Go to implementation
      "before": ["g", "i"],
      "commands": ["editor.action.goToImplementation"]
    },
    {
      // gpi → Peek implementation (inline preview)
      "before": ["g", "p", "i"],
      "commands": ["editor.action.peekImplementation"]
    },
    {
      // gr → Find all references
      "before": ["g", "r"],
      "commands": ["editor.action.referenceSearch.trigger"]
    },
    {
      // gt → Go to type definition
      "before": ["g", "t"],
      "commands": ["editor.action.goToTypeDefinition"]
    },
    {
      // gpt → Peek type definition (inline preview)
      "before": ["g", "p", "t"],
      "commands": ["editor.action.peekTypeDefinition"]
    }
  ],

  // Vim Performance Optimization
  "extensions.experimental.affinity": {
    "vscodevim.vim": 1
  },

