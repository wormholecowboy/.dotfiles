{
  "env": {},
  "permissions": {
    "allow": [
      "Read(*)",
      "Find(*)",
      "Bash(git log:*)",
      "Bash(git diff:*)",
      "Bash(git status:*)",
      "Bash(git branch:*)",
      "Bash(git checkout:*)",
      "Bash(npm run lint)",
      "Bash(npm run test:*)",
      "Read(~/.zshrc)",
      "Read(*)",
      "Bash(grep:*)",
      "Bash(ls*)",
      "Bash(find:*)",
      "Bash(mv*)",
      "Bash(mkdir*)",
      "Bash(tree*)",
      "Bash(ruff*)",
      "Bash(touch*)",
      "Bash(cat*)",
      "Bash(npm run*)",
      "Bash(npm start)",
      "Bash(ruff check*)",
      "Bash(pytest*)",
      "Bash(python -m pytest*)",
      "Bash(python3 -m pytest*)",
      "Bash(uv run pytest:*)"
      "Bash(gh issue view*)",
      "Bash(docker ps:*)",
      "Bash(docker exec:*)",
      "Bash(docker cp:*)",
      "Bash(docker stop:*)",
      "Bash(docker rm:*)",
      "Bash(docker-compose build:*)",
      "Bash(docker-compose down:*)",
      "Bash(docker-compose up:*)",
      "Bash(docker-compose ps:*)",
      "Bash(docker logs:*)",
      "Web Search(*)",
      "mcp__shadcn",
      "mcp__context7",
      "mcp__puppeteer__puppeteer_navigate",
      "mcp__puppeteer__puppeteer_screenshot",
      "mcp__puppeteer__puppeteer_evaluate",
      "mcp__archon",
      "mcp__context7"
    ],
    "deny": []
  },
  "alwaysThinkingEnabled": true,
  "statusLine": {
    "type": "command",
    "command": "input=$(cat); model=$(echo \"$input\" | jq -r '.model.display_name'); workspace=$(echo \"$input\" | jq -r '.workspace.current_dir'); style=$(echo \"$input\" | jq -r '.output_style.name'); printf \"\\x1b[2m%s\\x1b[0m in \\x1b[2m%s\\x1b[0m [%s]\" \"$model\" \"${workspace##*/}\" \"$style\""
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "say \"Claude code needs your attention\""
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "say \"things\""
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "echo \"Hook fired at $(date)\" >> /tmp/claude-hook-test.txt"
          }
        ]
      }
    ]
  }
}
